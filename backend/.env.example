# Application Settings
APP_NAME="Rescue System"
APP_VERSION="1.0.0"
DEBUG=True
ENVIRONMENT=development

# Server
HOST=0.0.0.0
PORT=8000

# Database (MySQL)
DATABASE_URL=mysql+pymysql://rescue_user:rescue_pass_2024_secure@localhost:3306/rescue_db?charset=utf8mb4

# Redis
REDIS_URL=redis://:rescue_redis_pass@localhost:6379/0

# Security
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS
# Используем JSON-массив, чтобы корректно парсилось в pydantic_settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# OpenAI API
OPENAI_API_KEY=47d22a91-9b0f-412b-a3ed-b93f522f6b6b

# Mapbox (для карт)
MAPBOX_ACCESS_TOKEN=your_mapbox_token_here

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
UPLOAD_DIR=uploads

# Email (заглушка)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@rescue-system.ru
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@rescue-system.ru

# SMS (заглушка)
SMS_API_KEY=your_sms_api_key
SMS_API_URL=https://sms-api.example.com

# Logs
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Tver coordinates (центр города)
DEFAULT_LATITUDE=56.8587
DEFAULT_LONGITUDE=35.9176
DEFAULT_ZOOM=12

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Android APK download
APK_DOWNLOAD_PATH=downloads/sos-mobile-latest.apk
